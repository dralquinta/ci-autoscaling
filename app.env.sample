# OCI Container Instance Deployment Configuration
# Source this file before running deploy.sh or loadbalancer.sh
# Usage: source deploy.env

# Required: OCI Configuration
export OCI_COMPARTMENT_OCID="ocid1.compartment.oc1..example"
export SUBNET_OCID="ocid1.subnet.oc1.region.example"
export AD_NAME="REGION-AD-1"

# Docker Registry Configuration
export DOCKER_USERNAME="your-username"
export DOCKER_PASSWORD=""  # Set this or use docker login before deployment
export DOCKER_REGISTRY="docker.io"
export IMAGE_NAME="ci-autoscaling"
export IMAGE_TAG="latest"

# Container Configuration
export CONTAINER_NAME="autoscaling-demo"
export DISPLAY_NAME="autoscaling-demo-instance"
export MEMORY_GB="8"
export OCPUS="1"
export APP_PORT="8080"
export HEALTH_CHECK_PATH="/actuator/health"

# Load Balancer Configuration
export LB_OCID="ocid1.loadbalancer.oc1.region.example"
export LB_SUBNET_OCID="ocid1.subnet.oc1.region.example"
export LB_DISPLAY_NAME="autoscaling-demo-lb"
export LB_SHAPE="flexible"
export LB_MIN_BANDWIDTH_MBPS="10"
export LB_MAX_BANDWIDTH_MBPS="100"
export BACKEND_SET_NAME="autoscaling-demo-backend-set"
export LISTENER_NAME="http-listener-80"
